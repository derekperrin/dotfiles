# Set default values for the accounts
defaults
auth            on
tls             on
tls_starttls    off
tls_trust_file /etc/ssl/certs/DigiCert_Global_Root_CA.pem
logfile         ~/.msmtp.log

# Fastmail account -- derek@derekperrin.com
account derekperrin
host smtp.fastmail.com
port 465
protocol smtp
from derek@derekperrin.com
user deper29@fastmail.fm
passwordeval gpg --no-tty -q -d .msmtppassword.asc

